:- dynamic фильм/4.

% Определение базовых классов
наследует(медиа, объект).
наследует(фильм, медиа).
наследует(жанр, фильм).
наследует(по_настроению, фильм).
наследует(по_длительности, фильм).
наследует(боевик, жанр).
наследует(комедия, жанр).
наследует(драма, жанр).
наследует(веселый, по_настроению).
наследует(грустный, по_настроению).
наследует(короткий, по_длительности).
наследует(длинный, по_длительности).

% Фильмы и их свойства
фильм("Матрица", боевик, длинный, грустный).
фильм("Тупой и еще тупее", комедия, длинный, веселый).
фильм("Форрест Гамп", драма, длинный, веселый).
фильм("Один дома", комедия, короткий, веселый).
фильм("Гладиатор", боевик, длинный, грустный).

% Процедуры
% Найти фильмы по критериям
поиск_фильма(Жанр, Длина, Настроение, Фильмы) :-
    findall(Фильм, фильм(Фильм, Жанр, Длина, Настроение), Фильмы).

% Добавить новый фильм
добавить_фильм(Название, Жанр, Длина, Настроение) :-
    assertz(фильм(Название, Жанр, Длина, Настроение)).

% Вывести информацию о фильме
информация(Название) :-
    фильм(Название, Жанр, Длина, Настроение),
    write(Название), write(" — Жанр: "), write(Жанр),
    write(", Длительность: "), write(Длина),
    write(", Настроение: "), write(Настроение), nl.
